[{"base":{"baseRuleHeader":{"sourceText":"Taishō vol. 23 no. 1423 [cf. no. 1421]","label":"Classical Chinese Mahīśāsaka Bhikkhunī Sekhiya 47"},"baseRule":{"id":"lzh-mi-bi-pm-sk47","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"47","sourceText":"Taishō vol. 23 no. 1423 [cf. no. 1421]","text":"不高聲入白衣舍應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhunī Sekhiya 47"}},"fullParallels":[{"id":"pli-tv-bu-pm-sk13","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"13","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Appasaddo antaraghare gamissāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhu Sekhiya 13","translations":[{"id":"pli-tv-bi-pm-sk13_de_nanadassana","translator":"Bhikkhu Ñāṇadassana","inLanguage":"Deutsch","text":"„Ich werde in bewohnter Gegend leise sprechend gehen“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk13_en_brahmali","translator":"Bhikkhu Brahmali","inLanguage":"English","text":"I will not be noisy while walking in inhabited areas, this is how you should train."},{"id":"pli-tv-bi-pm-sk13_es_chandako","translator":"Ajahn Chandako","inLanguage":"Español","text":"Caminaré hablando con voz baja en áreas habitadas: un entrenamiento para ser observado."}]},{"id":"lzh-sarv-bu-pm-sk27","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"27","sourceText":"Taishō vol. 23 no. 1436","text":"小聲入白衣舍。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 27"},{"id":"lzh-sarv-bu-pm-2-sk20","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"20","sourceText":"Taishō vol. 22 no. 1422b","text":"小聲入白衣舍。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 20"},{"id":"lzh-mu-bu-pm-sk27","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"27","sourceText":"Taishō vol. 24 no. 1454","text":"不搖頭。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhu Sekhiya 27"},{"id":"lzh-mi-bu-pm-sk47","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"47","sourceText":"Taishō vol. 22 no.1422a (cf. no. 1421)","text":"不高聲入白衣舍。應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhu Sekhiya 47"},{"id":"lzh-mg-bu-pm-sk5","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"5","sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","text":"小聲入家內應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhu Sekhiya 5"},{"id":"lzh-dg-bu-pm-sk22","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"22","sourceText":"Taishō vol. 22 no. 1429","text":"「靜默入白衣舍，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 22","translations":[{"id":"lzh-dg-bu-pm-sk22_en_beal","translator":"Samuel Beal","inLanguage":"English","text":"To enter a layman’s house silently."},{"id":"lzh-dg-bu-pm-sk22_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Memasuki rumah seorang perumah tangga dengan tenang. Ini adalah sebuah aturan yang harus dilatih."}]},{"id":"lzh-dg-bu-pm-2-sk22","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"22","sourceText":"Taishō vol. 22 no. 1430 (cf. no. 1429, no. 1428)","text":"靜默入白衣舍應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 22"},{"id":"lzh-ka-bu-pm-sk13","inLanguage":"Classical Chinese","tradition":"Kāśyapīya","vinayaOffenseClass":"Sekhiya","ruleNumber":"13","sourceText":"Taishō vol. 24 no.1460","text":"靜默入白衣舍。應當學。","label":"Classical Chinese Kāśyapīya Bhikkhu Sekhiya 13"},{"id":"pli-tv-bi-pm-sk13","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"13","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Appasaddā antaraghare gamissāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhunī Sekhiya 13","translations":[{"id":"pli-tv-bi-pm-sk13_de_huesken-nanadassana","translator":["Ute Husken","Bhikkhu Nanadassana"],"inLanguage":"Deutsch","text":"„Ich werde in bewohnter Gegend leise sprechend gehen“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk13_en_thanissaro","translator":"Thanissaro Bhikkhu","inLanguage":"English","text":"I will go (speaking) with a lowered voice in inhabited areas: a training to be observed."},{"id":"pli-tv-bi-pm-sk13_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Saya akan berjalan (dengan berbicara) menggunakan suara rendah di daerah-daerah yang berpenghuni: inilah sebuah pelatihan untuk di patuhi."}]},{"id":"lzh-dg-bi-pm-sk22","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"22","sourceText":"Taishō vol. 22 no. 1431 (cf. No. 1428)","text":"「靜默入白衣舍，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhunī Sekhiya 22"},{"id":"lzh-sarv-bi-pm-sk25","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"25","sourceText":"Taisho vol. 23, no. 1437","text":"靜默入白衣舍。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhunī Sekhiya 25"},{"id":"lzh-mu-bi-pm-sk13","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"13","sourceText":"Taishō vol. 24 no. 1455","text":"少語言。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhunī Sekhiya 13"},{"id":"lzh-mg-bi-pm-sk18","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"18","sourceText":"Taishō vol. 22 no. 1427 [cf. no. 1425]","text":"小聲入家內應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhunī Sekhiya 18"}]}]