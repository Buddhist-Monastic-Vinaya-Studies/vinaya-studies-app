[{"base":{"baseRuleHeader":{"sourceText":"Taishō vol. 22 no. 1430 (cf. no. 1429, no. 1428)","label":"Classical Chinese Dharmaguptaka Bhikkhu Pācittiya 3"},"baseRule":{"id":"lzh-dg-bu-pm-2-pc3","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 22 no. 1430 (cf. no. 1429, no. 1428)","text":"若比丘兩舌語者波逸提。","label":"Classical Chinese Dharmaguptaka Bhikkhu Pācittiya 3"}},"fullParallels":[{"id":"pli-tv-bu-pm-pc3","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Bhikkhupesuññe pācittiyaṁ.","label":"Paḷī Theravāda Bhikkhu Pācittiya 3","translations":[{"id":"pli-tv-bi-pm-pc3_de_nanadassana","translator":"Bhikkhu Ñāṇadassana","inLanguage":"Deutsch","text":"Zwischenträgerei unter Mönchen muß gesühnt werden."},{"id":"pli-tv-bi-pm-pc3_en_brahmali","translator":"Bhikkhu Brahmali","inLanguage":"English","text":"If a monk engages in malicious talebearing between monks, he commits an offense entailing confession."},{"id":"pli-tv-bi-pm-pc3_es_chandako","translator":"Ajahn Chandako","inLanguage":"Español","text":"Habladurías entre bhikkhus: [La acción] ha de ser confesada"}]},{"id":"lzh-sarv-bu-pm-pc3","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 23 no. 1436","text":"若比丘。兩舌鬪他比丘者。波夜提。","label":"Classical Chinese Sarvāstivāda Bhikkhu Pācittiya 3"},{"id":"lzh-sarv-bu-pm-2-pc3","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 22 no. 1422b","text":"若比丘鬪亂他比丘。波夜提。","label":"Classical Chinese Sarvāstivāda Bhikkhu Pācittiya 3"},{"id":"lzh-mu-bu-pm-pc3","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 24 no. 1454","text":"若復苾芻離間語故。波逸底迦。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhu Pācittiya 3"},{"id":"lzh-mi-bu-pm-pc3","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 22 no.1422a (cf. no. 1421)","text":"若比丘。兩舌鬪亂比丘。波逸提。","label":"Classical Chinese Mahīśāsaka Bhikkhu Pācittiya 3"},{"id":"lzh-mg-bu-pm-pc3","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","text":"若比丘。兩舌語。波夜提。","label":"Classical Chinese Mahāsaṅghika Bhikkhu Pācittiya 3"},{"id":"lzh-dg-bu-pm-pc3","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 22 no. 1429","text":"「若比丘！兩舌語者，波逸提。","label":"Classical Chinese Dharmaguptaka Bhikkhu Pācittiya 3","translations":[{"id":"lzh-dg-bu-pm-pc3_en_beal","translator":"Samuel Beal","inLanguage":"English","text":"If a monk be guilty of hypocritical language, it is Pācittiya."},{"id":"lzh-dg-bu-pm-pc3_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Jika seorang bhikṣu menabur perselisihan di antara para bhikṣu lainnya, ia melakukan sebuah pāyattika."}]},{"id":"lzh-ka-bu-pm-pc2","inLanguage":"Classical Chinese","tradition":"Kāśyapīya","vinayaOffenseClass":"Pācittiya","ruleNumber":"2","sourceText":"Taishō vol. 24 no.1460","text":"若比丘兩舌語。波逸提。","label":"Classical Chinese Kāśyapīya Bhikkhu Pācittiya 2"},{"id":"pli-tv-bi-pm-pc99","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Pacittiya","ruleNumber":"99","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Bhikkhunipesuññe pācittiyaṁ.","label":"Paḷī Theravāda Bhikkhunī Pācittiya 99","translations":[{"id":"pli-tv-bi-pm-pc99_de_huesken-nanadassana","translator":["Ute Husken","Bhikkhu Nanadassana"],"inLanguage":"Deutsch","text":"Zwischenträgerei unter Nonnen muß gesühnt werden."},{"id":"pli-tv-bi-pm-pc99_en_thanissaro","translator":"Thanissaro Bhikkhu","inLanguage":"English","text":"Malicious tale-bearing among bhikkhunis is to be confessed."},{"id":"pli-tv-bi-pm-pc99_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Desas-desus yang di antara para Bhikkhuni harus di akui."}]},{"id":"lzh-dg-bi-pm-pc3","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 22 no. 1431 (cf. No. 1428)","text":"「若比丘尼，兩舌語，波逸提。","label":"Classical Chinese Dharmaguptaka Bhikkhunī Pācittiya 3"},{"id":"lzh-mi-bi-pm-pc3","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 23 no. 1423 [cf. no. 1421]","text":"若比丘尼兩舌鬪亂比丘尼波逸提。","label":"Classical Chinese Mahīśāsaka Bhikkhunī Pācittiya 3"},{"id":"lzh-sarv-bi-pm-pc3","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taisho vol. 23, no. 1437","text":"若比丘尼兩舌者。波夜提。","label":"Classical Chinese Sarvāstivāda Bhikkhunī Pācittiya 3"},{"id":"lzh-mu-bi-pm-pc3","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 24 no. 1455","text":"若復苾芻尼離間語故。波逸底迦。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhunī Pācittiya 3"},{"id":"lzh-mg-bi-pm-pc3","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Pācittiya","ruleNumber":"3","sourceText":"Taishō vol. 22 no. 1427 [cf. no. 1425]","text":"若比丘尼。兩舌者波夜提。","label":"Classical Chinese Mahāsaṅghika Bhikkhunī Pācittiya 3"}]}]