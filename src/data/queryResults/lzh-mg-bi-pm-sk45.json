[{"base":{"baseRuleHeader":{"sourceText":"Taishō vol. 22 no. 1427 [cf. no. 1425]","label":"Classical Chinese Mahāsaṅghika Bhikkhunī Sekhiya 45"},"baseRule":{"id":"lzh-mg-bi-pm-sk45","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"45","sourceText":"Taishō vol. 22 no. 1427 [cf. no. 1425]","text":"不得齧半食應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhunī Sekhiya 45"}},"fullParallels":[{"id":"pli-tv-bu-pm-sk45","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"45","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Na kabaḷāvacchedakaṁ bhuñjissāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhu Sekhiya 45","translations":[{"id":"pli-tv-bi-pm-sk45_de_nanadassana","translator":"Bhikkhu Ñāṇadassana","inLanguage":"Deutsch","text":"„Ich werde nicht (die Brockenspeise) genießen, indem ich einen Bissen abbeiße“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk45_en_brahmali","translator":"Bhikkhu Brahmali","inLanguage":"English","text":"I will not eat breaking up a mouthful, this is how you should train."},{"id":"pli-tv-bi-pm-sk45_es_chandako","translator":"Ajahn Chandako","inLanguage":"Español","text":"No comeré mordiendo por partes los bocados: un entrenamiento para ser observado."}]},{"id":"lzh-sarv-bu-pm-sk72","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"72","sourceText":"Taishō vol. 23 no. 1436","text":"不嚙半食。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 72"},{"id":"lzh-sarv-bu-pm-2-sk66","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"66","sourceText":"Taishō vol. 22 no. 1422b","text":"不齧半飯。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 66"},{"id":"lzh-mu-bu-pm-sk72","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"72","sourceText":"Taishō vol. 24 no. 1454","text":"不得以殘食置鉢水中。應當學。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhu Sekhiya 72"},{"id":"lzh-mi-bu-pm-sk68","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"68","sourceText":"Taishō vol. 22 no.1422a (cf. no. 1421)","text":"不含食語。應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhu Sekhiya 68"},{"id":"lzh-mg-bu-pm-sk32","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"32","sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","text":"不齧半食應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhu Sekhiya 32"},{"id":"lzh-ka-bu-pm-sk54","inLanguage":"Classical Chinese","tradition":"Kāśyapīya","vinayaOffenseClass":"Sekhiya","ruleNumber":"54","sourceText":"Taishō vol. 24 no.1460","text":"不嚙半食。應當學。","label":"Classical Chinese Kāśyapīya Bhikkhu Sekhiya 54"},{"id":"pli-tv-bi-pm-sk45","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"45","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Na kabaḷāvacchedakaṁ bhuñjissāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhunī Sekhiya 45","translations":[{"id":"pli-tv-bi-pm-sk45_de_huesken-nanadassana","translator":["Ute Husken","Bhikkhu Nanadassana"],"inLanguage":"Deutsch","text":"„Ich werde nicht (die Brockenspeise) genießen, indem ich einen Bissen abbeiße“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk45_en_thanissaro","translator":"Thanissaro Bhikkhu","inLanguage":"English","text":"I will not eat nibbling at mouthfuls of food: a training to be observed."},{"id":"pli-tv-bi-pm-sk45_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Saya tidak akan makan dengan mengunyah banyak suapan makanan: inilah sebuah pelatihan untuk di patuhi."}]},{"id":"lzh-mi-bi-pm-sk68","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"68","sourceText":"Taishō vol. 23 no. 1423 [cf. no. 1421]","text":"不嚙半食應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhunī Sekhiya 68"},{"id":"lzh-sarv-bi-pm-sk68","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"68","sourceText":"Taisho vol. 23, no. 1437","text":"不齧半食。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhunī Sekhiya 68"},{"id":"lzh-mu-bi-pm-sk62","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"62","sourceText":"Taishō vol. 24 no. 1455","text":"不齧半食。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhunī Sekhiya 62"}]}]