[{"base":{"baseRuleHeader":{"sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","label":"Classical Chinese Mahāsaṅghika Bhikkhu Adhikaraṇasamatha 4"},"baseRule":{"id":"lzh-mg-bu-pm-as4","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","text":"應與自言治比尼人。與自言治比尼。","label":"Classical Chinese Mahāsaṅghika Bhikkhu Adhikaraṇasamatha 4"}},"fullParallels":[{"id":"pli-tv-bu-pm-as4","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Paṭiññāya kāretabbaṁ.","label":"Paḷī Theravāda Bhikkhu Adhikaraṇasamatha 4","translations":[{"id":"pli-tv-bi-pm-as4_de_nanadassana","translator":"Bhikkhu Ñāṇadassana","inLanguage":"Deutsch","text":"ein Eingeständnis (des Bezichtigten) herbeizuführen versuchen."},{"id":"pli-tv-bi-pm-as4_en_brahmali","translator":"Bhikkhu Brahmali","inLanguage":"English","text":"Acting according to what has been admitted"},{"id":"pli-tv-bi-pm-as4_es_chandako","translator":"Ajahn Chandako","inLanguage":"Español","text":"Actuar de acuerdo con lo que se ha admitido."}]},{"id":"lzh-sarv-bu-pm-as4","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Taishō vol. 23 no. 1436","text":"應與自言治人。當與自言治。","label":"Classical Chinese Sarvāstivāda Bhikkhu Adhikaraṇasamatha 4"},{"id":"lzh-sarv-bu-pm-2-as4","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Taishō vol. 22 no. 1422b","text":"應與自言持人。當與自言持。","label":"Classical Chinese Sarvāstivāda Bhikkhu Adhikaraṇasamatha 4"},{"id":"lzh-mu-bu-pm-as4","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Taishō vol. 24 no. 1454","text":"應與求罪自性毘奈耶 當與求罪自性毘奈耶","label":"Classical Chinese Mūlasarvāstivāda Bhikkhu Adhikaraṇasamatha 4"},{"id":"lzh-mi-bu-pm-as5","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"5","sourceText":"Taishō vol. 22 no.1422a (cf. no. 1421)","text":"應與自言。與自言治。","label":"Classical Chinese Mahīśāsaka Bhikkhu Adhikaraṇasamatha 5"},{"id":"lzh-dg-bu-pm-as4","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Taishō vol. 22 no. 1429","text":"「應與自言治，當與自言治。","label":"Classical Chinese Dharmaguptaka Bhikkhu Adhikaraṇasamatha 4","translations":[{"id":"lzh-dg-bu-pm-as4_en_beal","translator":"Samuel Beal","inLanguage":"English","text":"If the case requires independent decision, then let there be sentence given."},{"id":"lzh-dg-bu-pm-as4_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Jika sebuah masalah dapat diselesaikan dengan metode pengakuan seseorang, biarlah pengakuan dibuat."}]},{"id":"lzh-dg-bu-pm-2-as4","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Taishō vol. 22 no. 1430 (cf. no. 1429, no. 1428)","text":"應與自言治。當與自言治。","label":"Classical Chinese Dharmaguptaka Bhikkhu Adhikaraṇasamatha 4"},{"id":"lzh-ka-bu-pm-as4","inLanguage":"Classical Chinese","tradition":"Kāśyapīya","vinayaOffenseClass":"Adhikaraṇasamatha","ruleNumber":"4","sourceText":"Taishō vol. 24 no.1460","text":"應與自言治。當與自言治。","label":"Classical Chinese Kāśyapīya Bhikkhu Adhikaraṇasamatha 4"},{"id":"pli-tv-bi-pm-as4","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Adhikaranasamatha","ruleNumber":"4","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Paṭiññāya kāretabbaṁ.","label":"Paḷī Theravāda Bhikkhunī Adhikaraṇasamatha 4","translations":[{"id":"pli-tv-bi-pm-as_de_huesken-nanadassana","translator":["Ute Husken","Bhikkhu Nanadassana"],"inLanguage":"Deutsch","text":"ein Ei