[{"base":{"baseRuleHeader":{"sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","label":"Classical Chinese Mahāsaṅghika Bhikkhu Sekhiya 24"},"baseRule":{"id":"lzh-mg-bu-pm-sk24","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"24","sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","text":"一心受食應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhu Sekhiya 24"}},"partialParallels":[{"id":"lzh-sarv-bu-pm-sk62","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"62","sourceText":"Taishō vol. 23 no. 1436","text":"一心受飯。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 62"},{"id":"lzh-sarv-bu-pm-2-sk56","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"56","sourceText":"Taishō vol. 22 no. 1422b","text":"一心受羹。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 56"},{"id":"lzh-mu-bu-pm-sk62","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"62","sourceText":"Taishō vol. 24 no. 1454","text":"不舒舌食。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhu Sekhiya 62"},{"id":"lzh-ka-bu-pm-sk40","inLanguage":"Classical Chinese","tradition":"Kāśyapīya","vinayaOffenseClass":"Sekhiya","ruleNumber":"40","sourceText":"Taishō vol. 24 no.1460","text":"正意受食。應當學。","label":"Classical Chinese Kāśyapīya Bhikkhu Sekhiya 40"},{"id":"lzh-sarv-bi-pm-sk58","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"58","sourceText":"Taisho vol. 23, no. 1437","text":"一心受飯。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhunī Sekhiya 58"},{"id":"pli-tv-bu-pm-sk27","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"27","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Sakkaccaṁ piṇḍapātaṁ paṭiggahessāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhu Sekhiya 27","translations":[{"id":"pli-tv-bi-pm-sk27_de_nanadassana","translator":"Bhikkhu Ñāṇadassana","inLanguage":"Deutsch","text":"„Ich werde die Brockenspeise mit Würde entgegennehmen“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk27_en_brahmali","translator":"Bhikkhu Brahmali","inLanguage":"English","text":"I will receive almsfood respectfully, this is how you should train."},{"id":"pli-tv-bi-pm-sk27_es_chandako","translator":"Ajahn Chandako","inLanguage":"Español","text":"Recibiré comida donada con aprecio: un entrenamiento para ser observado."}]},{"id":"lzh-mi-bu-pm-sk51","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"51","sourceText":"Taishō vol. 22 no.1422a (cf. no. 1421)","text":"一心受食。應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhu Sekhiya 51"},{"id":"lzh-dg-bu-pm-sk26","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"26","sourceText":"Taishō vol. 22 no. 1429","text":"「用意受食，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 26","translations":[{"id":"lzh-dg-bu-pm-sk26_en_beal","translator":"Samuel Beal","inLanguage":"English","text":"To receive food with a mind collected and staid."},{"id":"lzh-dg-bu-pm-sk26_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Menerima makanan dengan hati-hati. Ini adalah sebuah aturan yang harus dilatih."}]},{"id":"lzh-dg-bu-pm-2-sk26","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"26","sourceText":"Taishō vol. 22 no. 1430 (cf. no. 1429, no. 1428)","text":"正意受食應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 26"},{"id":"pli-tv-bi-pm-sk27","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"27","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Sakkaccaṁ piṇḍapātaṁ paṭiggahessāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhunī Sekhiya 27","translations":[{"id":"pli-tv-bi-pm-sk27_de_huesken-nanadassana","translator":["Ute Husken","Bhikkhu Nanadassana"],"inLanguage":"Deutsch","text":"„Ich werde die Brockenspeise mit Würde entgegennehmen“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk27_en_thanissaro","translator":"Thanissaro Bhikkhu","inLanguage":"English","text":"I will receive alms food appreciatively: a training to be observed."},{"id":"pli-tv-bi-pm-sk27_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Saya akan menerima dana makanan dengan penuh penghargaan: inilah sebuah pelatihan untuk di patuhi."}]},{"id":"lzh-dg-bi-pm-sk26","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"26","sourceText":"Taishō vol. 22 no. 1431 (cf. No. 1428)","text":"「用意受食，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhunī Sekhiya 26"},{"id":"lzh-mi-bi-pm-sk51","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"51","sourceText":"Taishō vol. 23 no. 1423 [cf. no. 1421]","text":"一心受食應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhunī Sekhiya 51"},{"id":"lzh-mu-bi-pm-sk40","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"40","sourceText":"Taishō vol. 24 no. 1455","text":"恭敬受食。應當學。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhunī Sekhiya 40"},{"id":"lzh-mg-bi-pm-sk37","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"37","sourceText":"Taishō vol. 22 no. 1427 [cf. no. 1425]","text":"一心受食應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhunī Sekhiya 37"},{"id":"lzh-sarv-bu-pm-sk63","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"63","sourceText":"Taishō vol. 23 no. 1436","text":"一心受羹。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 63"},{"id":"lzh-sarv-bu-pm-2-sk57","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"57","sourceText":"Taishō vol. 22 no. 1422b","text":"一心受飯。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 57"},{"id":"lzh-mu-bu-pm-sk63","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"63","sourceText":"Taishō vol. 24 no. 1454","text":"不作窣堵波形食。應當學。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhu Sekhiya 63"},{"id":"lzh-ka-bu-pm-sk46","inLanguage":"Classical Chinese","tradition":"Kāśyapīya","vinayaOffenseClass":"Sekhiya","ruleNumber":"46","sourceText":"Taishō vol. 24 no.1460","text":"正意受羹。應當學。","label":"Classical Chinese Kāśyapīya Bhikkhu Sekhiya 46"},{"id":"lzh-sarv-bi-pm-sk59","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"59","sourceText":"Taisho vol. 23, no. 1437","text":"一心受羹。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhunī Sekhiya 59"}]}]