[{"base":{"baseRuleHeader":{"sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","label":"Classical Chinese Mahāsaṅghika Bhikkhu Sekhiya 33"},"baseRule":{"id":"lzh-mg-bu-pm-sk33","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"33","sourceText":"Taishō vol. 22 no. 1426 (cf. no. 1425)","text":"不含食語應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhu Sekhiya 33"}},"fullParallels":[{"id":"pli-tv-bu-pm-sk43","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"43","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Na sakabaḷena mukhena byāharissāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhu Sekhiya 43","translations":[{"id":"pli-tv-bi-pm-sk43_de_nanadassana","translator":"Bhikkhu Ñāṇadassana","inLanguage":"Deutsch","text":"„Ich werde nicht sprechen, wenn ich einen Bissen im Mund habe“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk43_en_brahmali","translator":"Bhikkhu Brahmali","inLanguage":"English","text":"I will not speak with food in my mouth, this is how you should train."},{"id":"pli-tv-bi-pm-sk43_es_chandako","translator":"Ajahn Chandako","inLanguage":"Español","text":"No hablaré con la boca llena: un entrenamiento para ser observado."}]},{"id":"lzh-sarv-bu-pm-sk71","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"71","sourceText":"Taishō vol. 23 no. 1436","text":"不含食語。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 71"},{"id":"lzh-sarv-bu-pm-2-sk65","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"65","sourceText":"Taishō vol. 22 no. 1422b","text":"不含食語。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhu Sekhiya 65"},{"id":"lzh-mu-bu-pm-sk71","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"71","sourceText":"Taishō vol. 24 no. 1454","text":"在白衣舍不棄洗鉢水。除問主人。應當學。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhu Sekhiya 71"},{"id":"lzh-mi-bu-pm-sk70","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"70","sourceText":"Taishō vol. 22 no.1422a (cf. no. 1421)","text":"不齧半食。應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhu Sekhiya 70"},{"id":"lzh-dg-bu-pm-sk38","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"38","sourceText":"Taishō vol. 22 no. 1429","text":"「不得含飯語，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 38","translations":[{"id":"lzh-dg-bu-pm-sk38_en_beal","translator":"Samuel Beal","inLanguage":"English","text":"Not to speak with rice in the mouth."},{"id":"lzh-dg-bu-pm-sk38_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Tidak berbicara dengan makanan di mulut. Ini adalah sebuah aturan yang harus dilatih."}]},{"id":"lzh-dg-bu-pm-2-sk38","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"38","sourceText":"Taishō vol. 22 no. 1430 (cf. no. 1429, no. 1428)","text":"不得含食語應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 38"},{"id":"lzh-ka-bu-pm-sk64","inLanguage":"Classical Chinese","tradition":"Kāśyapīya","vinayaOffenseClass":"Sekhiya","ruleNumber":"64","sourceText":"Taishō vol. 24 no.1460","text":"不含食語。應當學。","label":"Classical Chinese Kāśyapīya Bhikkhu Sekhiya 64"},{"id":"pli-tv-bi-pm-sk43","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"43","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Na sakabaḷena mukhena byāharissāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhunī Sekhiya 43","translations":[{"id":"pli-tv-bi-pm-sk43_de_huesken-nanadassana","translator":["Ute Husken","Bhikkhu Nanadassana"],"inLanguage":"Deutsch","text":"„Ich werde nicht sprechen, wenn ich einen Bissen im Mund habe“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk43_en_thanissaro","translator":"Thanissaro Bhikkhu","inLanguage":"English","text":"I will not speak with the mouth full of food: a training to be observed."},{"id":"pli-tv-bi-pm-sk43_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Saya tidak akan berbicara dengan mulut penuh makanan: inilah sebuah pelatihan untuk di patuhi."}]},{"id":"lzh-dg-bi-pm-sk38","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"38","sourceText":"Taishō vol. 22 no. 1431 (cf. No. 1428)","text":"「不得含飯語，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhunī Sekhiya 38"},{"id":"lzh-mi-bi-pm-sk70","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"70","sourceText":"Taishō vol. 23 no. 1423 [cf. no. 1421]","text":"不含食語應當學(七十)。","label":"Classical Chinese Mahīśāsaka Bhikkhunī Sekhiya 70"},{"id":"lzh-sarv-bi-pm-sk67","inLanguage":"Classical Chinese","tradition":"Sarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"67","sourceText":"Taisho vol. 23, no. 1437","text":"不含食語。應當學。","label":"Classical Chinese Sarvāstivāda Bhikkhunī Sekhiya 67"},{"id":"lzh-mu-bi-pm-sk52","inLanguage":"Classical Chinese","tradition":"Mūlasarvāstivāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"52","sourceText":"Taishō vol. 24 no. 1455","text":"不含食語。應當學。","label":"Classical Chinese Mūlasarvāstivāda Bhikkhunī Sekhiya 52"},{"id":"lzh-mg-bi-pm-sk46","inLanguage":"Classical Chinese","tradition":"Mahāsaṅghika","vinayaOffenseClass":"Sekhiya","ruleNumber":"46","sourceText":"Taishō vol. 22 no. 1427 [cf. no. 1425]","text":"不得含食語應當學。","label":"Classical Chinese Mahāsaṅghika Bhikkhunī Sekhiya 46"}]}]