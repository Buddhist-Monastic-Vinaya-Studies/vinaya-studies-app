[{"base":{"baseRuleHeader":{"sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","label":"Paḷī Theravāda Bhikkhunī Sekhiya 28"},"baseRule":{"id":"pli-tv-bi-pm-sk28","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"28","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Pattasaññinī piṇḍapātaṁ paṭiggahessāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhunī Sekhiya 28"},"translations":[{"id":"pli-tv-bi-pm-sk28_de_huesken-nanadassana","translator":["Ute Husken","Bhikkhu Nanadassana"],"inLanguage":"Deutsch","text":"„Ich werde die Brockenspeise mit auf die Schale gerichteter Aufmerksamkeit entgegennehmen“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk28_en_thanissaro","translator":"Thanissaro Bhikkhu","inLanguage":"English","text":"I will receive alms food with attention focused on the bowl: a training to be observed."},{"id":"pli-tv-bi-pm-sk28_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Saya akan menerima dana makanan dengan perhatian tertuju pada mangkuk: inilah sebuah pelatihan untuk di patuhi."}]},"fullParallels":[{"id":"pli-tv-bu-pm-sk28","inLanguage":"Paḷī","tradition":"Theravāda","vinayaOffenseClass":"Sekhiya","ruleNumber":"28","sourceText":"Mahāsaṅgīti Tipiṭaka Buddhavasse 2500","text":"Pattasaññī piṇḍapātaṁ paṭiggahessāmīti sikkhā karaṇīyā.","label":"Paḷī Theravāda Bhikkhu Sekhiya 28","translations":[{"id":"pli-tv-bi-pm-sk28_de_nanadassana","translator":"Bhikkhu Ñāṇadassana","inLanguage":"Deutsch","text":"„Ich werde die Brockenspeise mit auf die Schale gerichteter Aufmerksamkeit entgegennehmen“, ist eine Schulungsregel, die befolgt werden soll."},{"id":"pli-tv-bi-pm-sk28_en_brahmali","translator":"Bhikkhu Brahmali","inLanguage":"English","text":"I will receive almsfood with attention on the almsbowl, this is how you should train."},{"id":"pli-tv-bi-pm-sk28_es_chandako","translator":"Ajahn Chandako","inLanguage":"Español","text":"Recibiré comida donada con la atención en el cuenco: un entrenamiento para ser observado."}]}],"partialParallels":[{"id":"lzh-mi-bu-pm-sk58","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"58","sourceText":"Taishō vol. 22 no.1422a (cf. no. 1421)","text":"諦視鉢食。應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhu Sekhiya 58"},{"id":"lzh-dg-bu-pm-sk35","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"35","sourceText":"Taishō vol. 22 no. 1429","text":"「當繫鉢想食，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 35","translations":[{"id":"lzh-dg-bu-pm-sk35_en_beal","translator":"Samuel Beal","inLanguage":"English","text":"To hold the bowl and eat thoughtfully (or carefully)."},{"id":"lzh-dg-bu-pm-sk35_id_karniawan","translator":"Arya Karniawan","inLanguage":"Indonesian","text":"Penuh perhatian pada mangkuk dana ketika makan. Ini adalah sebuah aturan yang harus dilatih."}]},{"id":"lzh-dg-bu-pm-2-sk35","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"35","sourceText":"Taishō vol. 22 no. 1430 (cf. no. 1429, no. 1428)","text":"鉢想食應當學。當繫","label":"Classical Chinese Dharmaguptaka Bhikkhu Sekhiya 35"},{"id":"lzh-dg-bi-pm-sk35","inLanguage":"Classical Chinese","tradition":"Dharmaguptaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"35","sourceText":"Taishō vol. 22 no. 1431 (cf. No. 1428)","text":"「當繫鉢想食，應當學。","label":"Classical Chinese Dharmaguptaka Bhikkhunī Sekhiya 35"},{"id":"lzh-mi-bi-pm-sk58","inLanguage":"Classical Chinese","tradition":"Mahīśāsaka","vinayaOffenseClass":"Sekhiya","ruleNumber":"58","sourceText":"Taishō vol. 23 no. 1423 [cf. no. 1421]","text":"諦視鉢食應當學。","label":"Classical Chinese Mahīśāsaka Bhikkhunī Sekhiya 58"}]}]